{
  "entryPoints": [
    "apps/backend/src",
    "apps/frontend/src",
    "packages/shared/src"
  ],
  "entryPointStrategy": "expand",
  "out": "docs",
  "includeVersion": true,
  "exclude": [
    "**/*.spec.ts",
    "**/node_modules/**"
  ],
  "excludeExternals": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "readme": "README.md",
  "plugin": ["typedoc-plugin-markdown"]
}
